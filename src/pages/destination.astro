---
import DestinationInfo from "@components/DestinationInfo.astro";
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout>
  <div
    class="background-img"
    slot="background"
    style={`--bg-image-desktop: url("/images/destination/background-destination-desktop.jpg");--bg-image-tablet: url("/images/destination/background-destination-tablet.jpg");--bg-image-mobile: url("/images/destination/background-destination-mobile.jpg")`}
  >
  </div>

  <div class="px-6 md:px-10 lg:px-40 py-2 md:py-12 lg:pt-16">
    <h1
      class="text-center uppercase leading-none tracking-[2.7px] md:text-xl md:tracking-[3.375px] lg:text-[28px] lg:tracking-[4.725px] before:content-['01'] before:mr-4 before:opacity-25 before:font-bold md:text-left"
    >
      pick your destination
    </h1>
    <DestinationInfo />
  </div>
</PageLayout>
